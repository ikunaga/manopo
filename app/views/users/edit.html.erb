<div style="text-align: center; width: 100%; margin-top: 50px;">
  <div class="row">
    <div class="log-in">

      <h2>会員情報編集</h2>

      <%= form_for(@user, url: user_path) do |f| %>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field" style="width:100%;">
          <%= f.label :プロフィール画像 %><br />
          <div style="padding-left: 650px;">
            <%= f.attachment_field :image %>
          </div>
        </div>

        <div class="field">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :性 %><br />
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :名 %><br />
          <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <%= f.label :セイ %><br />
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <%= f.label :メイ %><br />
          <%= f.text_field :last_name_kana %>
        </div>

        <div class="field">
          <%= f.label :都道府県 %><br />
          <%= f.text_field :location %>
        </div>

        <div class="field">
          <%= f.label :年齢 %><br />
          <%= f.text_field :age %>
        </div>

        <div class="field">
        <%= f.label :年齢層 %><br />
          <div class="radio-inline">
            <%= f.radio_button :age_group, :シニア, checked: "checked" %>
            <%= f.label :シニア, class: "job_type_label" %>
          </div>
          <div class="radio-inline">
          　<%= f.radio_button :age_group, :若者 %>
            <%= f.label :若者, class: "job_type_label" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :自己紹介 %><br />
          <%= f.text_area :introduction %>
        </div>

        <div class="actions">
          <%= f.submit "更新する" %>
        </div>


      <% end %>

<div style="margin-top: 30px;">
  <h4>＜現在登録されているスキル＞</h4>
  <div style="font-size: 20px;">
    <% @user.skills.each do |skill| %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>　<%= skill.skill_name %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
  </div>
</div>

<div style="text-align: center; font-size: 20px; width: 200px; margin: auto; margin-top: 50px; padding-top: 5px;">
  <%= link_to "スキルを追加する" ,new_skill_path ,class: 'btn btn-primary btn-block' %></p>
</div>

    </div>
  </div>
</div>

