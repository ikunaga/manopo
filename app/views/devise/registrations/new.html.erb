<div class="container-fluid bg-info" style="text-align: center; width: 100%;">
  <div class="row">
    <div class="log-in">

      <h2>会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field" style="width:100%;">
          <%= f.label :プロフィール画像 %><br />
          <div style="padding-left: 650px;">
            <%= f.attachment_field :image %>
          </div>
        </div>

        <div class="field">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :性 %><br />
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :名 %><br />
          <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <%= f.label :セイ %><br />
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <%= f.label :メイ %><br />
          <%= f.text_field :last_name_kana %>
        </div>

        <div class="field">
          <%= f.label :都道府県 %><br />
          <%= f.text_field :location %>
        </div>

        <div class="field">
          <%= f.label :年齢 %><br />
          <%= f.text_field :age %>
        </div>

        <div class="field">
        <%= f.label :年齢層 %><br />
          <div class="radio-inline">
            <%= f.radio_button :age_group, :先輩, checked: "checked" %>
            <%= f.label :先輩, class: "job_type_label" %>
          </div>
          <div class="radio-inline">
          　<%= f.radio_button :age_group, :後輩 %>
            <%= f.label :後輩, class: "job_type_label" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :住所 %><br />
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <%= f.label :電話番号 %><br />
          <%= f.text_field :phone_number %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>


      <% end %>

      <%= render "devise/shared/links" %>


    </div>
  </div>
</div>
